<DrumMachineScreen>:
    name: "drum_machine"
    panel: dm_panel
    bpm: bpm_textinput

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint_y: 0.2
            orientation: 'horizontal'

            Label:
                text: 'BPM'
            TextInput:
                id: bpm_textinput
                text: '60'
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.285
                panel: root.panel

                DMPlayButton:
                    text: 'Play'
                    bpm_value: root.bpm.text
                DMStopButton:
                    text: 'Stop'

        DrumMachinePanel:
            id: dm_panel
            size_hint_y: 0.8
