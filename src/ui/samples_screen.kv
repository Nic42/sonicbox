<SamplesScreen>:
    name: 'samples'
    carousel: samples_carousel

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2

            Button:
                text: "<="
                size_hint_x: 0.1
                on_press: root.carousel.load_previous()
            Label:
                text: root.carousel.title
                size_hint_x: 0.8
            Button:
                text: "=>"
                size_hint_x: 0.1
                on_press: root.carousel.load_next()

        SamplesCarousel:
            id: samples_carousel
            size_hint_y: 0.8

<SamplesDropdownMenuCheckbox>:
	edit_favorites: edit_favorites_checkbox.active

	orientation: "horizontal"
	Label:
		text: "Edit Favorites"
	MDCheckbox:
		id: edit_favorites_checkbox
		active: False
