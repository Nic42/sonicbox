#:import MDCheckbox kivymd.selectioncontrols.MDCheckbox

#:import DMStopButton widgets.drum_machine_widgets.DMStopButton
#:import SynthsButton widgets.synth_widgets.SynthsButton
#:import TonicsButton widgets.synth_widgets.TonicsButton
#:import ScalesButton widgets.synth_widgets.ScalesButton


<ChordProgScreen>:
    name: "chord_prog"
    bpm: bpm_textinput
    panel: chords_panel

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.12
            orientation: 'horizontal'

            Label:
                text: 'BPM'
            TextInput:
                id: bpm_textinput
                text: '60'
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.285

                CPPlayButton:
                    text: 'Play'
                    bpm_value: root.bpm.text
                    panel: root.panel
                DMStopButton:
                    text: 'Stop'
                    panel: root.panel

        BoxLayout:
            size_hint_y: 0.12
            orientation: 'horizontal'

            SynthsButton:
                id: synth_button
                current: "piano"
                text: "Synth: {}".format(self.current)
                on_release: self.open_bottom_sheet()
            TonicsButton:
                id: tonic_button
                current: "c1"
                text: "Tonic: {}".format(self.current)
                on_release: self.open_bottom_sheet()
            ScalesButton:
                id: scale_button
                current: "major"
                text: "Scale: {}".format(self.current)
                on_release: self.open_bottom_sheet()

        ChordsPanel:
            id: chords_panel
            size_hint_y: 0.76
            synth: synth_button.current
            tonic: tonic_button.current
            scale: scale_button.current


<ChordsPanel>:
    ChordsColumn:
    ChordsColumn:
    ChordsColumn:
    ChordsColumn:


<ChordsColumn>:
    orientation: 'vertical'
    padding: [self.width / 6, dp(30), self.width / 6, 0]
    key_degree: chords_spinner.text

    Label:
        size_hint_y: None
        height: dp(20)
        text: 'Cm'
    ChordsSpinner:
        id: chords_spinner
        size_hint_y: None
        height: dp(50)
    Widget:


<ChordsSpinner>:
    text: 'I'
    values: ('I', 'II', 'III', 'IV', 'V', 'VI', 'VII')
