#:import MDCheckbox kivymd.selectioncontrols.MDCheckbox

#:import DMPlayButton widgets.drum_machine_widgets.DMPlayButton
#:import DMStopButton widgets.drum_machine_widgets.DMStopButton
#:import SynthButton widgets.synth_widgets.SynthButton


<ChordProgScreen>:
    name: "chord_prog"
    bpm: bpm_textinput

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.15
            orientation: 'horizontal'

            SynthButton:
                id: synth_button
                current: "piano"
                text: "Synth: {}".format(self.current)
                on_release: self.open_bottom_sheet('synth')
            SynthButton:
                id: tonic_button
                current: "c1"
                text: "Tonic: {}".format(self.current)
                on_release: self.open_bottom_sheet('tonics')
            SynthButton:
                id: scale_button
                current: "major"
                text: "Scale: {}".format(self.current)
                on_release: self.open_bottom_sheet('scales')

        BoxLayout:
            size_hint_y: 0.15
            orientation: 'horizontal'

            Label:
                text: 'BPM'
            TextInput:
                id: bpm_textinput
                text: '60'
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.285

                DMPlayButton:
                    text: 'Play'
                    bpm_value: root.bpm.text
                DMStopButton:
                    text: 'Stop'

        BoxLayout:
            size_hint_y: 0.7
            Label:
                text: "yeah"
