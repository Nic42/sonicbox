#:import MDCheckbox kivymd.selectioncontrols.MDCheckbox

#:import DMStopButton widgets.drum_machine_widgets.DMStopButton
#:import SynthsButton widgets.synth_widgets.SynthsButton


<ChordProgScreen>:
    name: "chord_prog"
    bpm: bpm_textinput
    panel: chords_panel

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.12
            orientation: 'horizontal'

            Label:
                text: 'BPM'
            TextInput:
                id: bpm_textinput
                text: '60'
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.285

                CPPlayButton:
                    text: 'Play'
                    bpm_value: root.bpm.text
                    panel: root.panel
                DMStopButton:
                    text: 'Stop'
                    panel: root.panel

        BoxLayout:
            size_hint_y: 0.12
            orientation: 'horizontal'

            SynthsButton:
                id: synth_button
                current: "piano"
                text: "Synth: {}".format(self.current)
                on_release: self.open_bottom_sheet()
            KeysButton:
                id: key_button
                current: "c4"
                text: "Key: {}".format(self.current)
                on_release: self.open_bottom_sheet()
            KeyTypesButton:
                id: key_type_button
                current: "major"
                text: "Type: {}".format(self.current)
                on_release: self.open_bottom_sheet()

        ChordsPanel:
            id: chords_panel
            size_hint_y: 0.76
            synth: synth_button.current
            key: key_button.current
            key_type: key_type_button.current
            on_key: self.update_chord_label()
            on_key_type: self.update_chord_label()


<ChordsPanel>:
    ChordsColumn:
    ChordsColumn:
    ChordsColumn:
    ChordsColumn:


<ChordsColumn>:
    orientation: 'vertical'
    padding: [self.width / 6, dp(30), self.width / 6, 0]
    key_degree: chords_spinner.text
    chord_label: chord_name_label
    spinner: chords_spinner

    Label:
        size_hint_y: None
        id: chord_name_label
        height: dp(20)
        text: 'C'
    ChordsSpinner:
        id: chords_spinner
        size_hint_y: None
        height: dp(50)
    Widget:


<ChordsSpinner>:
    text: 'I'
    values: ('I', 'II', 'III', 'IV', 'V', 'VI', 'VII')
