#:import MDNavigationDrawer kivymd.navigationdrawer.MDNavigationDrawer
#:import NavigationLayout kivymd.navigationdrawer.NavigationLayout
#:import NavigationDrawerToolbar kivymd.navigationdrawer.NavigationDrawerToolbar
#:import NavigationDrawerIconButton kivymd.navigationdrawer.NavigationDrawerIconButton
#:import Toolbar kivymd.toolbar.Toolbar

#:import SamplesScreen widgets.SamplesScreen
#:import SynthButton widgets.SynthButton
#:import SynthKeyboard widgets.SynthKeyboard
#:import SynthsScreen widgets.SynthsScreen


NavigationLayout:
    id: nav_layout
    samples_groups: samples_screen.carousel
    screens: scr_mngr

    MDNavigationDrawer:
        id: nav_drawer
        NavigationDrawerToolbar:
            title: "Sonicbox"
        NavigationDrawerIconButton:
            icon: 'checkbox-blank-circle'
            text: "Samples"
            on_release: app.root.screens.current = 'samples'
        NavigationDrawerIconButton:
            icon: 'checkbox-blank-circle'
            text: "Synths"
            on_release: app.root.screens.current = 'synths'

    BoxLayout:
        orientation: 'vertical'

        Toolbar:
            id: toolbar
            size_hint_y: 0.08
            title: 'Sonicbox'
            md_bg_color: app.theme_cls.primary_color
            # background_palette: 'Primary'
            # background_hue: '500'
            left_action_items: [['menu', lambda x: app.root.toggle_nav_drawer()]]

        ScreenManager:
            id: scr_mngr
            size_hint_y: 0.92
            current: 'synths'
            
            SamplesScreen:
                id: samples_screen
            SynthsScreen:
                id: synths_screen


<SamplesScreen>:
    name: 'samples'
    carousel: samples_carousel

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2

            Button:
                text: "<="
                size_hint_x: 0.1
                on_press: root.samples_groups.load_previous()
            Label:
                text: 'Samples'
                size_hint_x: 0.8
            Button:
                text: "=>"
                size_hint_x: 0.1
                on_press: root.samples_groups.load_next()

        SamplesCarousel:
            id: samples_carousel
            size_hint_y: 0.8


<SynthsScreen>:
    name: "synths"
    
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.2
            orientation: 'horizontal'
            
            SynthButton:
                current: "piano"
                text: "Synth: {}".format(self.current)
            SynthButton:
                current: "c2"
                text: "Tonic: {}".format(self.current)
            SynthButton:
                synth: synth_keyboard
                current: "major"
                text: "Scale: {}".format(self.current)
                on_release: self.open_bottom_sheet()

        SynthKeyboard:
            id: synth_keyboard
            size_hint_y: 0.8


<PlayButton>:
    on_press: self.play()


<NoteButton>:
    on_press: self.play()
